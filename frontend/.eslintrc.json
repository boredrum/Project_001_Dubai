{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {"jsx":true}
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["webpack.config.js", "backend"],
    "rules": {
      "no-unused-vars": "error",
      "quotes": ["warn", "double"],
      "jsx-quotes": ["warn", "prefer-double"],
      "prefer-const": "error",
      "indent": ["warn", 2],
      "comma-dangle": ["warn", "always-multiline"],
      "semi": ["warn", "always"],
      "no-console": "warn",
      "react/prop-types": 0
    }
}
